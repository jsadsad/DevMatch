<div class= "container">
  <h3 class= "text-center">Contact Us</h3>
  
  <%= form_for "/contacts" do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :Name %>
  
  <%= f.label :Email %>
  <%= f.text_field :Email %>
  
  <%= f.label :Comments %>
  <%= f.text_field :Comments %>
  
  <%= f.submit 'Submit' %>
  <% end %>
</div>

 